{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "df/*": ["*", "bazel-genfiles/*", "bazel-bin/*"],
      "@dataform/*": ["*", "bazel-genfiles/*", "bazel-bin/*"]
    },
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ES6",
    "inlineSourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es2015"]
  },
  "exclude": ["node_modules", "build"]
}
